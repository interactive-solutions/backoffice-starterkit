{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel",
    "react",
    "promise"
  ],
  "env": {
    "browser" : true
  },
  "globals": {
    "__DEV__"      : false,
    "__TEST__"     : false,
    "__PROD__"     : false,
    "__COVERAGE__" : false
  },
  "rules": {
   "key-spacing"          : 0,
   "jsx-quotes"           : [2, "prefer-single"],
   "no-return-assign" : 0,
   "comma-dangle": ["error", {
     "arrays": "never",
     "objects": "never",
     "imports": "never",
     "exports": "never",
     "functions": "ignore"
   }],
   "max-len"              : [2, 120, 2],
   "object-curly-spacing" : [2, "always"],
   "space-before-function-paren": [2, "never"],
   "semi": [2, "always"],
   "react/jsx-indent-props": [0, 0],
   "react/jsx-tag-spacing": [2, {
     "closingSlash": "never",
     "beforeSelfClosing": "never",
     "afterOpening": "never"
   }],
   "react/jsx-space-before-closing": "off"
 }
}
